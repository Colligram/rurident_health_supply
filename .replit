modules = ["nodejs-20", "web"]
run = "npm run dev:full"

[nix]
channel = "stable-25_05"
packages = ["run"]

[deployment]
run = ["sh", "-c", "cd server && npm install && npm start & npm run dev"]

[web]
  port = 3000
  autoOpen = true

[[ports]]
localPort = 3000
externalPort = 80
exposeLocalhost = true

[[ports]]
localPort = 3001
externalPort = 3001
exposeLocalhost = true

[[ports]]
localPort = 5000

[[ports]]
localPort = 5001
externalPort = 3003

[[ports]]
localPort = 5173
externalPort = 5173
exposeLocalhost = true

[[ports]]
localPort = 5174

[workflows]
runButton = "Development Mode"

[[workflows.workflow]]
name = "Start Development Server"
author = 23089902
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Full Stack Development"
author = 29015215
mode = "parallel"

